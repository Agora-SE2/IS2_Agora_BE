<p id="notice"><%= notice %></p>

<h1>Opinion Reports</h1>

<table>
  <thead>
    <tr>
      <th>Opinion</th>
      <th>Reason</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opinion_reports.each do |opinion_report| %>
      <tr>
        <td><%= opinion_report.opinion.content %></td>
        <td><%= opinion_report.reason %></td>
        <td><%= opinion_report.user.email %></td>
        <td><%= link_to 'Show', opinion_report %></td>
        <td><%= link_to 'Edit', edit_opinion_report_path(opinion_report) %></td>
        <td><%= link_to 'Destroy', opinion_report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Opinion Report', new_opinion_report_path %>
